	public static int suma() {
		int suma  = 0;
		for (int i = 0; i < lista.size(); i++) {
			suma = lista.indexOf(i) + suma;
		}
		return suma;
	}
	public static int media() {
		int media = 0;
		for (int i = 0; i < lista.size(); i++) {
			media = lista.indexOf(i) + media;
		}
		media = media / lista.size();
		return media;
	}
